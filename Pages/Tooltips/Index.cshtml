@page
@model IAR.Pages.Tooltips.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tooltip[0].FieldName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tooltip[0].TooltipText)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Tooltip) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FieldName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TooltipText)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.FieldName">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.FieldName">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.FieldName">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
