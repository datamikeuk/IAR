@model IEnumerable<IAR.Models.ThirdParty>;

@{
    var icons = @Url.Content("~/bootstrap-icons.svg");
}

<table id="third-party-table" class="table table-striped table-bordered w-auto" data-url="@Url.Page("Edit")">
    <thead>
        <th> @Html.DisplayNameFor(model => model.ThirdPartyName) </th>
        <th> @Html.DisplayNameFor(model => model.Use) </th>
        <th> @Html.DisplayNameFor(model => model.Location) </th>
        <th> @Html.DisplayNameFor(model => model.LocationDetail) </th>
        <th></th>
    </thead>
    <tbody>
        @{
            if (Model?.Any() == true)
            {
                foreach (var item in Model) {
                    <tr>
                        <td class="w-25"> @item.ThirdPartyName </td>
                        <td class="w-25"> @item.Use </td>
                        <td class="w-25"> @item.Location?.GetDisplayName() </td>
                        <td class="w-25"> @item.LocationDetail </td>
                        <td>
                            <div class="d-inline-flex">
                                <button type="button" class="btn btn-secondary mx-1" ><svg class="bi"><use href="@icons#pencil-square"></use></svg></button>
                                <button type="button" class="btn btn-secondary mx-1" ><svg class="bi"><use href="@icons#trash"></use></svg></button>
                            </div>
                        </td>
                    </tr>
                }
            }
        }
    </tbody>
</table>